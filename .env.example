# AWS Credentials
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_SESSION_TOKEN=your_session_token_here  # Optional
AWS_REGION=us-east-1

# Bedrock Configuration
BEDROCK_MODEL_ID=anthropic.claude-3-sonnet-20240229-v1:0
BEDROCK_TEMPERATURE=0.0
BEDROCK_MAX_TOKENS=8192
BEDROCK_USE_CROSS_REGION=false
BEDROCK_MAX_RETRIES=3
BEDROCK_TIMEOUT=30
BEDROCK_CACHE_RESPONSES=true

# Application Settings
LOG_LEVEL=INFO
PYTHONPATH=/app
PYTHONUNBUFFERED=1

# Para usar este archivo:
# 1. Copiar a .env: cp .env.example .env
# 2. Actualizar AWS_ACCESS_KEY_ID y AWS_SECRET_ACCESS_KEY con tus credenciales
# 3. (Opcional) Ajustar otras configuraciones seg√∫n necesidades